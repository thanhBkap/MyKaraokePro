<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFF8dc"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtMaSo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:gravity="center"
            android:text="86758"
            android:textColor="#dc143c"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9967a"
        android:orientation="vertical"
        android:paddingLeft="5px" >

        <TextView
            android:id="@+id/txtTenBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mai mot tinh yeu"
            android:textColor="#ffd700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:text="Khong biet"
            android:textColor="#ffd700"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnThich"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5px"
                android:src="@drawable/like2" />

            <ImageButton
                android:id="@+id/btnKhongThich"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/dislike2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>